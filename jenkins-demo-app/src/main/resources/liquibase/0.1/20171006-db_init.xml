<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="20171006-db_init.01" author="dgoch">
		<createTable tableName="hp_bundle">
			<column name="id" type="number"/>
			<column name="revision" type="number"/>
			<column name="created" type="timestamp"/>
			<column name="updated" type="timestamp"/>
			<column name="value" type="clob"/>
		</createTable>
	</changeSet>

	<changeSet id="20171006-db_init.02" author="dgoch">
		<addNotNullConstraint tableName="hp_bundle" columnName="id" columnDataType="number"/>
		<addPrimaryKey tableName="hp_bundle" columnNames="id"/>
		<addNotNullConstraint tableName="hp_bundle" columnName="revision" columnDataType="number"/>
		<addNotNullConstraint tableName="hp_bundle" columnName="created" columnDataType="timestamp"/>
	</changeSet>

	<changeSet id="20171006-db_init.03" author="dgoch">
		<createSequence sequenceName="hp_seq" startValue="1" cycle="false"/>
	</changeSet>

</databaseChangeLog>